<div class="c-section c-section--hero">
  <div class="hero-section c-section__flex-row" style="background-image: url({{section.settings.background-image-1 | img_url: '1920x', crop: 'center'}});">
    <!---------------- MAIN TEXT CONTENT ---------------->
    <div class="page-container hero-section__primary-section">
      <!-- TEXT CONTENT -->
      <h3 class="subheading">{{ section.settings.subheading }}</h3>
      <h2 class="heading">{{ section.settings.heading }}</h2>
      {% if section.settings.paragraph != blank %}
        <p class="para">{{ section.settings.paragraph }}</p>
      {% endif %}
      <!-- CTA BUTTON -->
      <div class="c-section__btn-container">
        <a href="{{ section.settings.btn-link }}" class="btn--primary-rev">{{ section.settings.btn-text }}</a>
      </div>
    </div>
    <!---------------- PRODUCT OVERLAY ---------------->
    <div class="hero-section__overlay-container">
      <img src="{{ 'goldgoatcoffee_product-hero-min.png' | asset_img_url: '960x1217'}}" class="hero-section__overlay-img" alt="Gold Goat Coffee Bag">
    </div>
    <!---------------- SIDE SECTION (DESKTOP)---------------->
    <div class="hero-section__secondary-section hero-section__secondary-section--1">
      <div class="hero-section__cta-section hero-section__cta-section--1" style="background-image: url({{section.settings.background-image-2 | img_url: '960x', crop: 'center'}});">
        <h3 class="para--semi-bold">{{ section.settings.description-2 }}</h3>
        <a href="{{section.settings.link-url-2}}" class="para--semi-bold hero-section__link">{{section.settings.link-text-2}}<i class="fas fa-chevron-right hero-section__link-icon"></i></a>
      </div>
      <div class="hero-section__cta-section hero-section__cta-section--2" style="background-image: url({{section.settings.background-image-3 | img_url: '960x', crop: 'center'}});">
        <h3 class="para--semi-bold">{{ section.settings.description-3 }}</h3>
        <a href="{{section.settings.link-url-3}}" class="para--semi-bold hero-section__link">{{section.settings.link-text-3}}<i class="fas fa-chevron-right hero-section__link-icon"></i></a>
      </div>
    </div>
  </div>
  <!---------------- SIDE SECTION (TABLET & MOBILE) ---------------->
  <div class="hero-section__secondary-section hero-section__secondary-section--2">
    <div class="hero-section__cta-section hero-section__cta-section--1" style="background-image: url({{section.settings.background-image-2 | img_url: '960x', crop: 'center'}});">
      <h3 class="para--semi-bold">{{ section.settings.description-2 }}</h3>
      <a href="{{section.settings.link-url-2}}" class="para--semi-bold hero-section__link">{{section.settings.link-text-2}}<i class="fas fa-chevron-right hero-section__link-icon"></i></a>
    </div>
    <div class="hero-section__cta-section hero-section__cta-section--2" style="background-image: url({{section.settings.background-image-3 | img_url: '960x', crop: 'center'}});">
      <h3 class="para--semi-bold">{{ section.settings.description-3 }}</h3>
      <a href="{{section.settings.link-url-3}}" class="para--semi-bold hero-section__link">{{section.settings.link-text-3}}<i class="fas fa-chevron-right hero-section__link-icon"></i></a>
    </div>
  </div>
</div>

